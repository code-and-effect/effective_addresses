= f.simple_fields_for method, f.object.send(method) || f.object.addresses.build(:category => method.to_s.gsub('_address', '')) do |fa|
  - uuid = Time.now.to_i + rand(1...1000)
  - if ((f.object.errors.include?(method) && !f.object.errors.include?(:addresses)) rescue false)
    %p.inline-errors= f.object.errors[method].first

  - unless skip_full_name
    = fa.input :full_name

  = fa.input :address1, :placeholder => "e.g. Asphalt Road", :label => "Address 1"
  = fa.input :address2, :label => "Address 2"
  = fa.input :city, :placeholder => "e.g. Edmonton"
  = fa.input :country_code, :label => 'Country', :prompt => 'Country...' do
    = fa.select :country_code, region_options_for_select(EffectiveAddresses.country_codes == :all ? Carmen::Country.all : Carmen::Country.all.select{ |c| EffectiveAddresses.country_codes.include?(c.code) rescue true}, fa.object.try(:country_code), :priority => ['CA', 'US'] || EffectiveAddresses.country_codes_priority), {:prompt => 'Select Country...'}, {'data-effective-address-country' => uuid}

  - if fa.object.try(:country_code).present?
    = fa.input :state_code, :as => :select, :label => "State / Province", :prompt => 'Please select a country' do
      = fa.select :state_code, region_options_for_select(Carmen::Country.coded(fa.object.country_code).subregions, fa.object.state_code), {}, {'data-effective-address-state' => uuid}
  - else
    = fa.input :state_code, :as => :select, :label => "State / Province", :disabled => true, :prompt => 'Please select a country', :collection => [], :input_html => { 'data-effective-address-state' => uuid }

  = fa.input :postal_code, :label => "Zip / Postal code", :placeholder => "e.g. A1B 2C3"
